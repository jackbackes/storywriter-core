{
    "plugins": ["plugins/markdown", "plugins/summarize"],
    "opts": {
      "recurse": true,
      "destination": "./docs"
    },
    "title": "Checkpoint Documentation",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
      "include": ["./server"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false,
        "systemName": "Story Writer",
        "theme": "readable",
        "lineNumbers": true
    }
}
